<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_bright"
    tools:context="com.vogella.android.shopping.FragmentOne">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Here is Your shopping list:"/>

    <TextView
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:id="@+id/name_editText_frag1"/>

    <TextView
        android:text="Email: "
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:layout_height="40dp"
        android:id="@+id/email_textView_frag1"/>

    <TextView
        android:text="1. "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/item1_editText_frag1"/>

    <TextView
        android:text="2. "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/item2_textView_frag1"/>

    <TextView
        android:text="3. "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/item3_editText_frag1"/>

    <TextView
        android:text="4. "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/item4_textView_frag1"/>

    <TextView
        android:text="5. "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/item5_editText_frag1"/>

    <TextView
        android:text="6. "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/item6_textView_frag1"/>

    <TextView
        android:text="7. "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/item7_editText_frag1"/>

    <TextView
        android:text="8. "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/item8_textView_frag1"/>

</LinearLayout>
